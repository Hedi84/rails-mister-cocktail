 <!-- <h1>Our Sexy Cocktails</h1> -->
 <div class="index-background">
  <div class="cards">
    <div class="row">
      <% @cocktails.each do |cocktail|%>
          <div class="col-xs-12 col-sm-3">
            <div class="card">
            <%= link_to cocktail_path(cocktail) do%>
            <% if cocktail.photo %>
              <% photo_url = cl_image_path cocktail.photo %>
            <% else %>
              <% photo_url = image_tag("fire.jpg") %>
            <% end %>
            <div class="card-photo" style="background-image: url('<%= photo_url %>');"></div>
             <% end %>
             <div class="card-description">
                <h2><%= cocktail.name%></h2>
              </div>
              <div class="card-category">
                  <%= link_to 'X', cocktail_path(cocktail[:id]), method: :delete, data: { confirm: 'Are you sure you want to delete this cocktail?' } %>

              </div>

             </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
 </div>















