
  <div class="banner">
      <div class="banner-content">
        <%#= image_tag 'banner.jpg', class: 'image_style'%>
        <h1>Sexy Cocktails</h1>
           <%= link_to "Add your cocktail", new_cocktail_path, type: "button", class: "button" %>


      </div>
